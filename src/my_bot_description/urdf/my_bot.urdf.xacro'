<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_bot">

  <!-- ========= Global properties ========= -->
  <xacro:property name="base_length" value="0.4"/>
  <xacro:property name="base_width"  value="0.3"/>
  <xacro:property name="base_height" value="0.15"/>

  <xacro:property name="wheel_radius"      value="0.07"/>
  <xacro:property name="wheel_width"       value="0.03"/>
  <xacro:property name="wheel_separation"  value="0.28"/>

  <xacro:property name="robot_mass" value="8.0"/> <!-- kg -->

  <!-- ========== Macros for inertial helpers ========== -->
  <!-- Simple box inertia approximation -->
  <xacro:macro name="inertial_box" params="mass x y z">
    <inertial>
      <mass value="${mass}"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
        ixx="${mass * (y*y + z*z) / 12.0}"
        iyy="${mass * (x*x + z*z) / 12.0}"
        izz="${mass * (x*x + y*y) / 12.0}"
        ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </xacro:macro>

  <!-- ========== Base link (chassis) ========== -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 ${base_height/2.0}" rpy="0 0 0"/>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="grey">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 ${base_height/2.0}" rpy="0 0 0"/>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
    </collision>

    <xacro:inertial_box mass="${robot_mass}"
                        x="${base_length}"
                        y="${base_width}"
                        z="${base_height}"/>
  </link>

  <!-- ========== Ball-handling "funnel" at the front ========== -->
  <!-- Left guide -->
  <link name="funnel_left">
    <visual>
      <origin xyz="${base_length/2.0} ${base_width/2.0} ${base_height}" rpy="0 0 0.6"/>
      <geometry>
        <box size="0.3 0.02 0.15"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.3 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="${base_length/2.0} ${base_width/2.0} ${base_height}" rpy="0 0 0.6"/>
      <geometry>
        <box size="0.3 0.02 0.15"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.5" x="0.3" y="0.02" z="0.15"/>
  </link>

  <joint name="funnel_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="funnel_left"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Right guide -->
  <link name="funnel_right">
    <visual>
      <origin xyz="${base_length/2.0} ${-base_width/2.0} ${base_height}" rpy="0 0 -0.6"/>
      <geometry>
        <box size="0.3 0.02 0.15"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="${base_length/2.0} ${-base_width/2.0} ${base_height}" rpy="0 0 -0.6"/>
      <geometry>
        <box size="0.3 0.02 0.15"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.5" x="0.3" y="0.02" z="0.15"/>
  </link>

  <joint name="funnel_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="funnel_right"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Front bumper bar -->
  <link name="front_bar">
    <visual>
      <origin xyz="${base_length/2.0 + 0.05} 0 ${base_height/2.0}" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 ${base_width} 0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="${base_length/2.0 + 0.05} 0 ${base_height/2.0}" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 ${base_width} 0.1"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.8" x="0.05" y="${base_width}" z="0.1"/>
  </link>

  <joint name="front_bar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_bar"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ========== Wheels (left & right) ========== -->
  <!-- Left wheel -->
  <link name="left_wheel_link">
    <visual>
      <origin xyz="0 ${wheel_separation/2.0} ${wheel_radius}" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
      <material name="dark_grey">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 ${wheel_separation/2.0} ${wheel_radius}" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.5"
                        x="${wheel_width}"
                        y="${wheel_radius*2.0}"
                        z="${wheel_radius*2.0}"/>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 ${wheel_separation/2.0} ${wheel_radius}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Right wheel -->
  <link name="right_wheel_link">
    <visual>
      <origin xyz="0 ${-wheel_separation/2.0} ${wheel_radius}" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
      <material name="dark_grey"/>
    </visual>
    <collision>
      <origin xyz="0 ${-wheel_separation/2.0} ${wheel_radius}" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.5"
                        x="${wheel_width}"
                        y="${wheel_radius*2.0}"
                        z="${wheel_radius*2.0}"/>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 ${-wheel_separation/2.0} ${wheel_radius}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ========== Caster wheel (simple) ========== -->
  <link name="caster_wheel">
    <visual>
      <origin xyz="-${base_length/2.0 - 0.05} 0 ${wheel_radius/2.0}" rpy="0 0 0"/>
      <geometry>
        <sphere radius="${wheel_radius/2.0}"/>
      </geometry>
      <material name="dark_grey"/>
    </visual>
    <collision>
      <origin xyz="-${base_length/2.0 - 0.05} 0 ${wheel_radius/2.0}" rpy="0 0 0"/>
      <geometry>
        <sphere radius="${wheel_radius/2.0}"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.2"
                        x="${wheel_radius}"
                        y="${wheel_radius}"
                        z="${wheel_radius}"/>
  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="-${base_length/2.0 - 0.05} 0 0" rpy="0 0 0"/>
  </joint>

</robot>

